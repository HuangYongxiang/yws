<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_card_auth"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_view_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_smrzf"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_1"
            android:layout_toRightOf="@+id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实人认证"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x15" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="right"
            android:layout_toRightOf="@+id/tv_1"
            android:id="@+id/tv_card_auth"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/arrow_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x14"
            android:text="未认证"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/arrow_1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jt" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f4f4f4"/>

    <RelativeLayout
        android:id="@+id/rl_vip_auth"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_view_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_xbf"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_3"
            android:layout_toRightOf="@+id/image_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别认证"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x15" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="right"
            android:layout_toRightOf="@+id/tv_3"
            android:id="@+id/tv_vip_auth"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/arrow_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x14"
            android:text="未认证"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/arrow_3"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jt" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f4f4f4"/>
    <RelativeLayout
        android:id="@+id/rl_reputation"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_view_5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_xydf"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_5"
            android:layout_toRightOf="@+id/image_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信誉度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x15" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/arrow_5"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jt" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f4f4f4"/>
</LinearLayout>