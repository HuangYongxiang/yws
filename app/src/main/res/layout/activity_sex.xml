<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.wangchuang.yws.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/fsousuo_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_title"
            android:textSize="18sp"
            android:text="性别认证"
            />
        <ImageView
            android:id="@+id/tv_regir"
            android:layout_alignParentLeft="true"
            android:layout_width="8dp"
            android:layout_height="17dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_fh"
            android:onClick="back"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="证件照"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:textSize="16dp"
        android:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#eeeeee"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:scaleType="fitXY"
            android:tooltipText="ddd"
            android:src="@drawable/pic_zjz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:text="身份证正面照片"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#999999"
            android:layout_marginBottom="36dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:scaleType="fitXY"
            android:tooltipText="ddd"
            android:src="@drawable/pic_zjz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:text="身份证反面照片"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#999999"
            android:layout_marginBottom="36dp"/>

    </FrameLayout>
    <Button
        android:id="@+id/btn_login"
        android:gravity="center"
        android:onClick="login"
        android:clickable="true"
        android:background="@drawable/btn_setting"
        android:textColor="@color/color_title"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:text="提交审核"/>


</LinearLayout>
