<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.wangchuang.yws.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/fsousuo_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_title"
            android:textSize="18sp"
            android:text="性别认证"
            />
        <ImageView
            android:id="@+id/tv_regir"
            android:layout_alignParentLeft="true"
            android:layout_width="8dp"
            android:layout_height="17dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_fh"
            android:onClick="back"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="78dp"
        android:textStyle="bold"
        android:text="你已完成性别认证"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#333333"
        android:drawableLeft="@drawable/icon_srrzdh"/>
<ImageView
    android:layout_width="210dp"
    android:layout_height="193dp"
    android:layout_marginTop="93dp"
    android:layout_gravity="center"
    android:background="@drawable/pic_xbrz"/>
</LinearLayout>
