<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.wangchuang.yws.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/fsousuo_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_title"
            android:textSize="18sp"
            android:text="设置"
            />
        <ImageView
            android:id="@+id/tv_regir"
            android:layout_alignParentLeft="true"
            android:layout_width="8dp"
            android:layout_height="17dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_fh"
            android:onClick="back"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_beijing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yijian"
            style="@style/Textstyle"
            android:onClick="yijian"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:text="意见反馈"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_beijing"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14dp"
                android:padding="15dp"
                android:text="声音"/>

                <CheckBox
                    android:id="@+id/xuan"
                    android:layout_alignParentRight="true"
                    android:layout_margin="13dp"
                    android:layout_width="40dp"
                    android:layout_height="23dp"
                    android:background="@drawable/switch_off"
                   android:button="@null"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_beijing"/>
        <TextView
            android:id="@+id/huancun"
            style="@style/Textstyle"
            android:onClick="huancun"
            android:clickable="true"
            android:text="清除缓存"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_beijing"/>
        <TextView
            android:id="@+id/banben"
            style="@style/Textstyle"
            android:onClick="banben"
            android:clickable="true"
            android:text="版本更新"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_beijing"/>
        <Button
            android:id="@+id/btn_loginout"
            android:gravity="center"
            android:onClick="login"
            android:clickable="true"
            android:background="@drawable/btn_setting2"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="87dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:text="退出登录"/>
    </LinearLayout>
</LinearLayout>
