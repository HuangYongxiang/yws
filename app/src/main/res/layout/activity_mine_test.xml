<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.wangchuang.yws.activity.MineActivity">


    <com.example.wangchuang.yws.view.ObservableScrollView
        android:id="@+id/sv_contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/pic_grzx">

                        <ImageView
                            android:id="@+id/pic_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pic_grzx"/>
                        <RelativeLayout
                            android:id="@+id/toolbar_actionbar"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@android:color/transparent">

                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="27dp"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10px"
                                android:padding="5dp"
                                android:src="@drawable/icon_fh" />

                            <TextView
                                android:id="@+id/tv_option"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:padding="5dp"
                                android:text="设置"
                                android:textColor="@color/color_333333"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="92dp"
                        android:paddingBottom="20dp">

                        <com.example.wangchuang.yws.view.CircularImage
                            android:id="@+id/iv_header"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pic_tx" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="48dp"
                            android:text="姓名"
                            android:textColor="@color/color_333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@+id/tv_name"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/tv_name"
                            android:src="@drawable/icon_xg" />

                        <TextView
                            android:id="@+id/tv_alter_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/imageview"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/imageview"
                            android:text="修改昵称"
                            android:textColor="@color/color_666666"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_my_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_name"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="我的关注"
                            android:textColor="@color/color_666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_my_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_name"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/tv_my_like"
                            android:text="我的粉丝"
                            android:textColor="@color/color_666666"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_below="@+id/tv_name"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/iv_vip"
                            android:src="@drawable/icon_nv" />

                        <ImageView
                            android:id="@+id/iv_vip"
                            android:layout_width="27dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_name"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icon_vip1" />


                    </RelativeLayout>
                </FrameLayout>


                <LinearLayout
                    android:layout_below="@+id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/color_f4f4f4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_card_auth"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/image_view_1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_smrzf"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_1"
                                android:layout_toRightOf="@+id/image_view_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实人认证"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x15" />
                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/tv_1"
                                android:id="@+id/tv_card_auth"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_toLeftOf="@+id/arrow_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x14"
                                android:text="未认证"
                                />
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/arrow_1"
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_jt" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_f4f4f4"/>

                        <RelativeLayout
                            android:id="@+id/rl_vip_auth"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/image_view_3"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_xbf"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_3"
                                android:layout_toRightOf="@+id/image_view_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="性别认证"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x15" />
                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/tv_3"
                                android:id="@+id/tv_sex_auth"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_toLeftOf="@+id/arrow_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x14"
                                android:text="未认证"
                                />
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/arrow_3"
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_jt" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_f4f4f4"/>

                        <RelativeLayout
                            android:id="@+id/rl_sex_auth"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/image_view_2"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_vip"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_2"
                                android:layout_toRightOf="@+id/image_view_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIP服务"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x15" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/arrow_2"
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_jt" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_f4f4f4"/>

                        <RelativeLayout
                            android:id="@+id/rl_publish_service"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/image_view_4"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_xbf"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_4"
                                android:layout_toRightOf="@+id/image_view_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布特权服务"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x15" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/arrow_4"
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_jt" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_f4f4f4"/>

                        <RelativeLayout
                            android:id="@+id/rl_reputation"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@color/white"
                            >

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/image_view_5"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_xydf"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_5"
                                android:layout_toRightOf="@+id/image_view_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="信誉度"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/x15" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/arrow_5"
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_jt" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_f4f4f4"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_topView"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/color_fdda44"
                    app:tabIndicatorHeight="2dp"
                    app:tabSelectedTextColor="@color/color_fdda44"
                    app:tabTextColor="@color/color_666666" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f4f4f4"></View>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_contentView"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@color/white" />
        </LinearLayout>
    </com.example.wangchuang.yws.view.ObservableScrollView>

    <ImageView
        android:id="@+id/iv_publish"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="58dp"
        android:layout_height="68dp"
        android:src="@drawable/icon_fb"/>

    <LinearLayout
        android:id="@+id/ll_fixedView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"/>
</RelativeLayout>
