<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.wangchuang.yws.activity.GoodsDetailActivity">

    <RelativeLayout
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_main">

        <ImageView
            android:padding="5dp"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_back"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_fh" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="宝贝详情"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <ImageView
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_option"
            android:layout_width="29dp"
            android:layout_height="28dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

    <com.example.wangchuang.yws.view.BounceScrollView
        android:id="@+id/scrollview"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_above="@+id/bottom_ll"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.wangchuang.yws.view.CircularImage
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_header"
                    android:src="@drawable/pic_tx"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/iv_header"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_333333"
                    android:id="@+id/tv_name"
                    android:text="姓名"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:id="@+id/iv_sex"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_nv"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/iv_sex"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="27dp"
                    android:layout_height="12dp"
                    android:id="@+id/iv_vip"
                    android:src="@drawable/icon_vip1"/>

                <TextView
                    android:layout_alignBottom="@+id/tv_money"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fd3240"
                    android:textSize="14sp"
                    android:text="￥"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_fd3240"
                    android:textSize="18sp"
                    android:text="23"/>

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/tv_money"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    android:text="23"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_describe"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_spxqc" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_spxqc" />

            <ImageView
                android:id="@+id/imageView3"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:src="@drawable/pic_spxqc"/>
            <com.example.wangchuang.yws.view.NoScrollGridView
                android:gravity="center"
                android:id="@+id/gv_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="5dp"></com.example.wangchuang.yws.view.NoScrollGridView>



            <TextView
                android:id="@+id/tv_num"
                android:padding="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:text="浏览 3434"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f4f4f4"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:text="留言 0"/>

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/empty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/empty_iv"
                        android:layout_marginTop="30dp"
                        android:layout_centerInParent="true"
                        android:layout_width="155dp"
                        android:layout_height="165dp"
                        android:src="@drawable/pic_kb"/>

                    <TextView
                        android:layout_below="@+id/empty_iv"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/color_333333"
                        android:text="暂无留言"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>

                <com.example.wangchuang.yws.view.NoScrollListView
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"></com.example.wangchuang.yws.view.NoScrollListView>

            </LinearLayout>
        </LinearLayout>


    </com.example.wangchuang.yws.view.BounceScrollView>


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/comment_rl"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_ly"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_ly"/>
            <TextView
                android:layout_toRightOf="@+id/iv_ly"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="留言"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingRight="5dp"
            android:id="@+id/like_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_like"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_sc1"/>
            <TextView
                android:layout_toRightOf="@+id/iv_like"
                android:id="@+id/tv_like"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="收藏"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/go_buy_tv"
            android:gravity="center"
            android:background="@color/color_fd4543"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="我想要"
            android:layout_width="90dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/bottom_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="刷新"
            android:textColor="@color/color_666666"
            android:textSize="18sp"
            android:minHeight="40dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f4f4f4"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_666666"
            android:textSize="18sp"
            android:minHeight="40dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f4f4f4"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_666666"
            android:textSize="18sp"
            android:minHeight="40dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f4f4f4"/>

    </LinearLayout>
</RelativeLayout>
